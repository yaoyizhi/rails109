<%= link_to("write a review", new_movie_review_path(@movie), class: "btn btn-primary pull-right")%>
<h1><%= @movie.title %></h1>
<p>
    <%= simple_format(@movie.description) %>
</p>
<table class="table">
    <thead>
        <tr>
            <th>影评</th>
            <th>发表者</th>
            <th>发表时间</th>
        </tr>
    </thead>
    <tbody>
        <% @reviews.each do |review| %>
            <tr>
                <td><%= review.content %></td>
                <td><%= review.user.email %></td>
                <td><%= review.created_at %></td>
            </tr>
        <% end %>
    </tbody>
</table>
